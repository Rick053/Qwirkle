<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ss.qwirkle.server.controllers.SetupController">
   <children>
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <Label text="IP Address" />
            <TextField fx:id="ip" editable="false" />
            <Label text="Port Number" />
            <TextField fx:id="port" />
            <Label text="Max. Connections" />
            <TextField fx:id="maxConnections" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <HBox style="-fx-background-color: #424242;">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="connect" mnemonicParsing="false" text="Start Server" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="10.0" top="5.0" />
         </padding>
      </HBox>
   </children>
</VBox>
